<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrimeSceneDesktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CrimeSceneDesktop"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="#212529">

    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="mainPage" />

    <ShellContent
        Title="Workers"
        ContentTemplate="{DataTemplate local:CommonPage}"
        Route="commonPage" />

    <ShellContent
        Title="Create scene"
        ContentTemplate="{DataTemplate local:CreateScenePage}"
        Route="createScenePage"/>

    <ShellContent
        Title="User page"
        ContentTemplate="{DataTemplate local:UserPage}"
        Route="userPage" />

</Shell>
