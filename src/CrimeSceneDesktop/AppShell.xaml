<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="CrimeSceneDesktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CrimeSceneDesktop.Pages"
    Shell.FlyoutBehavior="Disabled"
    Shell.BackgroundColor="#212529">

    <ShellContent
        Title="Вход в аккаунт"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="mainPage" />

    <ShellContent
        Title="Список студентов"
        ContentTemplate="{DataTemplate local:CommonPage}"
        Route="commonPage" />

    <ShellContent
        Title="Создание сцены"
        ContentTemplate="{DataTemplate local:CreateScenePage}"
        Route="createScenePage"/>

    <ShellContent
        Title="Информация о студенте"
        ContentTemplate="{DataTemplate local:UserPage}"
        Route="userPage" />

    <ShellContent
        Title="Комментарии студента"
        ContentTemplate="{DataTemplate local:CommentsPage}"
        Route="commentsPage" />

</Shell>
